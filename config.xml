<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.voicecmd" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VoiceCMD</name>
    <description>A voice command app that works in the background.</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <!-- प्लगइन्स -->
    <plugin name="cordova-plugin-androidx-adapter" />
    <plugin name="cordova-plugin-speechrecognition" />
    <plugin name="cordova-plugin-background-mode" />
    <plugin name="cordova-plugin-camera" />
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-open-native-settings" />
    <plugin name="cordova-plugin-local-notification" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="AndroidXEnabled" value="true" />
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="34" />
        <preference name="ForegroundServiceType" value="microphone" />
        
        <!-- **** समाधान यहाँ है: इस ब्लॉक को हटा दिया गया है **** -->
        <!-- अब इसकी आवश्यकता नहीं है क्योंकि प्लगइन्स इसे स्वचालित रूप से करते हैं -->
        
    </platform>
</widget>
